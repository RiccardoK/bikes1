<div class="col-sm-4 col-md-4">
  <div class="one-prod">
    <% cache product do %> 

    <h3 class="prod-name">
    </h3>
    <h0r>
    <%= link_to image_tag(product.image_url, alt: "image", class: "img-responsive"),product unless product.image_url.blank? %>
        <h3><%= link_to product.name , product %></h3>

      <p>Color : <%= product.color %></p>

      <p class="price">
          <strong>Price:</strong><%= product.price %>
      </p>

      <p>
        Details<%= truncate(product.description, :length => 20) %>    
      </p>

    <%end%>

      <%= link_to 'Show more', product , class: "btn btn-default" %>
      <% if current_user && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(product) , class: "btn btn-default"  %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>


    <%end%>
  </div>
</div>
