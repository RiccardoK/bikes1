<div class="container">


  <div class="row product_show" data-product-id="<%= @product.id %>">

    <div class="col-md-4 col-xs-12 ">

  
     <%= image_tag(@product.image_url, width: "350", class: "img-zoom") %>
    
    </div>

      <div class="caption col-md-8 col-xs-12 product_show_description">
        <% cache @product do %>
          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @product.description %>
          </p>
        <% end %>
        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>

        <p>
          <strong>Price</strong>
          <%= @product.price%>
        </p>
        

        <p>Average Rating: <div id="#average-rating" class="rated" data-score="<%= @product.average_rating %>"></div> </p>
        
      
          <%= form_tag('/payments/create') do |form| %>
          <%= hidden_field_tag(:product_id, @product.id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <% end %>
    
          <br><br>
         <%= link_to 'Edit', edit_product_path(@product) %> |
         <%= link_to 'Back', products_path %>

      </div><!-- end col 8-->
    </div><!-- end col 4-->

  
      <div class="product_show_reviews">
      
      <%= render 'new_comment' %>
      <br><br><br>
        
        <h3>Reviews:</h3>
    

      <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
      <%= render 'comments' %>
      </div>


      <br>
    <%= will_paginate @comments, previous_label: "Older", next_label: "Newer"%>
    <br>
    <br>



 <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>

</div>