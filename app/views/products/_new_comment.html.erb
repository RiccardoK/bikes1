<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true ) do |f| %>
        <p>
          <%= f.label :body, "Commentsss" %><br>
          <%= f.text_area :body, class: "form-control", rows: "5" %>
        </p>

        <p>
   
    <br>
      <div class="rating"></div>
    </p>  

        <p>
          <%= f.submit "Submit", class:"btn btn-default", id: "submit_btn" %>
        </p>
  <% end %>
<% end %>