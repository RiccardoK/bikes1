<p id="notice"><%= notice %></p>

<h1>Products-Index</h1>



<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-6">
    <%= image_tag(product.image_url, class: "img-responsive") %>
        <a href=""><h3><%= product.name %></h3></a>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <strong><%= product.price %></strong><br>


        <%= link_to 'Show /', product %>
       <%= link_to 'Edit /', edit_product_path(product) %>
       <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><br><br><br><br>




      </div><!-- /col -->
    <% end %>
  </div>
</div>

 <button type="button" class="new_product" data-toggle="tooltip"  title="New Product"><h4><%= link_to 'New Product', new_product_path %></h4></button>