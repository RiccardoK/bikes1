

<h4>
<%= form_with(model: order, local: true) do |form| %>  
<% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="container col-sm-12 col-md-6 form-group">
    <div class="form-group has-success">
      <%= form.label :name, class:"col-2 col-form-label"  %>
      <%= form.text_field :name, class:"form-control", type:"text", placeholder:"Bike Model", id:"inputSuccess1" %>
    </div>
    <div class="field">
      <%= form.label :lastname, class:"col-2 col-form-label"  %>
      <%= form.text_field :lastname, class:"form-control", type:"text", placeholder:"Lastname", id:"example-text-input" %>
    </div>
    <div class="field">
      <%= form.label :description, class:"col-2 col-form-label"  %>
      <%= form.text_area :description, class:"form-control", type:"text", placeholder:"Description", id:"example-text-input" %>
    </div>
</div>
    

<div class="container col-sm-12 col-md-6 form-group">  
    
    <div class="field">
      <%= form.label :product_id, class:"col-2 col-form-label" %>
      <div class="input-group"> 
        <span class="input-group-addon">PID</span>
        <%= form.text_field :product_id, class:"form-control currency", placeholder:"1-100"%>
      </div>
    </div> 
  
    <div class="field">
      <%= form.label :user_id, class:"col-2 col-form-label" %>
      <div class="input-group"> 
        <span class="input-group-addon">UID</span>
        <%= form.text_field :user_id, class:"form-control currency", placeholder:"1-100"%>
      </div>
    </div> 


  <div class="actions">
    <%= form.submit class:"btn btn-default" %>
  </div>

  <div>
  <%= link_to 'Back', orders_path, class:"btn btn-default" %>
  </div>
  
<% end %></h4>

             