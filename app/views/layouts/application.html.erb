

<!DOCTYPE html>
<html>
  <head>
    <title>Bikes</title>
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Raleway:400,700" rel="stylesheet">
  
  <meta name="viewport" content="width=device-width, initial-scale=1">

   <%= csrf_meta_tags %>
  </head>

  <body>

  <header>
  
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Bike Shop", root_path , class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1 ">

        <!-- Sign up Log in -->

        <div class="navbar-form navbar-right ">
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class:"btn btn-default" ) %>
            <%= link_to('Edit User', edit_user_registration_path, :method => :get, class:"btn btn-default" ) %> 
          <% else %>
            <%= link_to('Login', new_user_session_path, :method => :get, class:"btn btn-default" ) %>
            <%= link_to('Register', new_user_registration_path, :method => :get, class:"btn btn-default" ) %>  
          <% end %>
        </div>



        <!-- Search Box -->
        <%= form_tag("/products", method: "get", class:"navbar-form navbar-right") do %> 
          <div class="form-group">
            <%= label_tag(:q, "Search for:", class:"hidden") %>
            <%= text_field_tag(:q, "", type:"text", class:"form-control", placeholder:"Search") %>
          </div>
        <%= submit_tag("Search", class:"btn btn-default") %>
        <% end %>


        <ul class="nav navbar-nav navbar-left">
          <% if user_signed_in? %>
          <li class="active"><%= link_to "Bikes", products_path %></li>
          <li class="active"><%= link_to "About", static_pages_about_path %></li>
          <li class="active"><%= link_to "Contact", static_pages_contact_path %></li>
          <li class="active"><%= link_to "Orders", orders_url %></li>
          <li class="active"><%= link_to "Users", users_path %></li>
          <% else %>
           <li class="active"><%= link_to "Bikes", products_path %></li>
          <li class="active"><%= link_to "About", static_pages_about_path %></li>
          <li class="active"><%= link_to "Contact", static_pages_contact_path %></li>
          <% end %>  
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>  
    
    <%= yield %>


    

   <footer class="footer-d">

      <div class="footer-right">

        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-linkedin"></i></a>
        <a href="#"><i class="fa fa-github"></i></a>

      </div>

     <div class="footer-copy">

        <p>Berlin Bikes &copy; 2017</p>
     </div>

    </footer>

  </body>
</html>
